{
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
    "endOfLine": "lf",
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.json", ".*rc"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
